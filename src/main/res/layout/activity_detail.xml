<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".ActivityDetail" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgDetail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="186dp"
            android:layout_marginRight="186dp"
            android:background="@color/cardview_light_background"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="187dp"
            android:layout_marginStart="187dp"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@color/cardview_light_background"/>

        <TextView
            android:id="@+id/set"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"
            android:layout_below="@+id/name"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:background="@color/cardview_light_background"/>

        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/set"
            android:layout_alignStart="@+id/set"
            android:layout_below="@+id/set"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:background="@color/cardview_light_background"/>

        <TextView
            android:id="@+id/level"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/type"
            android:layout_alignStart="@+id/type"
            android:layout_below="@+id/type"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:background="@color/cardview_light_background"/>

        <TextView
            android:id="@+id/condition"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/level"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/cardview_light_background"
            android:background="@color/cardview_dark_background"/>

        <TextView
            android:id="@+id/stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/condition"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:textSize="17sp"
            android:textColor="@color/cardview_light_background"
            android:background="@color/cardview_dark_background"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/stats"
            android:textSize="15sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:textColor="@color/cardview_light_background"
            android:background="@color/cardview_dark_background"/>
    </RelativeLayout>
</ScrollView>